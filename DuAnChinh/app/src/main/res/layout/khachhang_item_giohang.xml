<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_background_item">

        <ImageView
            android:src="@drawable/ticker"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSoLuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"/>

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="45000"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtThoiGianDat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9:30"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"/>

                <TextView
                    android:id="@+id/txtSoGhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A1 A2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtNgayChieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="21/02/2003"
                android:fontFamily="@font/roboto_medium"/>
        </LinearLayout>

        <Button
            android:layout_weight="0.5"
            android:id="@+id/btn_huy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:hint="Há»§y"
            android:backgroundTint="@null"
            android:background="@drawable/shape_button_giohang"
            android:fontFamily="@font/roboto_black"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>