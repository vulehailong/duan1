<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:layout_margin="30sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:src="@drawable/img"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9h30"
                    android:id="@+id/radio1"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10h30"
                    android:id="@+id/radio2"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11h00"
                    android:id="@+id/radio3"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectday"
                android:text="10/12/2022"/>
            <ToggleButton
                android:id="@+id/btn"
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/calendar"></ToggleButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/A1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A1"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/A2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A2"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/A3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A3"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/A4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A4"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/A5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="A5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/B1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="B1"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/B2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="B2"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/B3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="B3"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/B4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="B4"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/B5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="B5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/C1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C1"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/C2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C2"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/C3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C3"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/C4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C4"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/C5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/D1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="D1"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/D2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="D2"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/D3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="D3"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/D4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="D4"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/D5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="D5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/E1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="E1"
                    android:layout_weight="1"/>

                <CheckBox
                    android:id="@+id/E2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="E2"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/E3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="E3"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/E4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="E4"
                    android:layout_weight="1"/>
                <CheckBox
                    android:id="@+id/E5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="E5"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: "
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/txtsl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_gravity="center"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:gravity="end"
                android:layout_marginRight="10sp"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtgia"
                android:text="45.000 VNĐ"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10sp">
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="Back"
                android:textOn="Back"
                android:background="@drawable/background_toggleback"
                android:layout_gravity="center"/>
            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:textOff="Đặt vé"
                android:textOn="Đặt vé"

                android:background="@drawable/background_toggle"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>